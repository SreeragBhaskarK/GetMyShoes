<script>
    function cartCount(id) {
        console.log(id);
        $.ajax({
            type: 'get',
            url: '/add-toCart/' + id,
            success: (cartCounts) => {
                if (cartCounts) {
                    document.getElementById('cartCount').innerHTML = cartCounts
                }
            }
        })
    }
</script>