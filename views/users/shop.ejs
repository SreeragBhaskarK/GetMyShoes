<script>
    function test(category) {
        $.ajax({
            type: "POST",
            url: "/shop_category",
            data: { category: category },
            success: function (response) {
                console.log(response);
                location.reload()
            },
            error: function (xhr, status, error) {
                console.error(error);
            }
        });
    }

