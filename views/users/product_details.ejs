<script>
    const previewImage = document.getElementById('image-preview');

    document.querySelectorAll('a.pt').forEach(link => {
        link.addEventListener('click', (event) => {
            // Prevent the default link behavior
            /* event.preventDefault(); */

            // Remove the "active" class from all anchor tags
            document.querySelectorAll('a.pt').forEach(link => link.classList.remove('active'));

            // Add the "active" class to the clicked anchor tag
            event.currentTarget.classList.add('active');

            // Update the preview image src based on the clicked anchor tag
            previewImage.src = event.currentTarget.querySelector('img').src;



            // Log the href value of the clicked anchor tag
            console.log(event.currentTarget.href);
        });
    });

</script>
