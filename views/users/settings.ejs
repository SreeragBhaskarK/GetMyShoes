<script>
    // Get the ID of the last selected tab from localStorage
    let lastTab = localStorage.getItem('lastTab');

    // Set the active tab based on the lastTab ID, or default to the first tab
    let activeTab = document.querySelector(lastTab) || document.querySelector('.list-group-item:first-child');
    activeTab.classList.add('active');

    // Add a click event listener to each tab to update the lastTab value in localStorage
    document.querySelectorAll('.list-group-item').forEach(tab => {
        tab.addEventListener('click', function () {
            localStorage.setItem('lastTab', this.getAttribute('href'));
        });
    });


</script>


