<script>
    function verifyEmail(email) {
        $.ajax({
            type: 'post',
            url: '/emailverification',
            data: { email: email },
            success: (response => {
                if (response) {
                    window.location.href = response.redirectUrl

                }
            })
        })
    }

</script>